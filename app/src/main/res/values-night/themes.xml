<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mrproj" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/aubergine_300</item>
        <item name="colorPrimaryVariant">@color/aubergine_900</item>
        <item name="colorOnPrimary">@color/text_grey</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_600</item>
        <item name="colorSecondaryVariant">@color/orange_600</item>
        <item name="colorOnSecondary">@color/text_grey</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

<!--        <item name="android:tint">@color/grey</item>-->
    </style>

    <style name="OptionTitle">
        <item name="android:drawablePadding">@dimen/padding_small</item>
        <item name="android:padding">@dimen/padding_med</item>
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:drawableTint">@color/grey</item>
    </style>

    <style name="ImageButton">
        <item name="android:tint">@color/grey</item>
    </style>

</resources>