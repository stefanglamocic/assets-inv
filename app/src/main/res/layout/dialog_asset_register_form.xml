<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/margin_large">

    <EditText
        android:id="@+id/asset_register_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint="@string/name"
        android:inputType="text"/>

    <ScrollView
        android:id="@+id/fixed_assets_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/asset_register_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/add_fixed_asset"
        android:layout_marginTop="@dimen/margin_med">

    </ScrollView>

    <Button
        android:id="@+id/add_fixed_asset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fixed_assets_container"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/margin_med"
        android:text="@string/add_item"
        android:drawableLeft="@drawable/ic_add"
        android:theme="@style/SecondaryButton"/>

</androidx.constraintlayout.widget.ConstraintLayout>